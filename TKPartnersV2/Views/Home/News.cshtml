@model News

<link rel="stylesheet"
      asp-href-include="/lib/bootstrap/dist/**/*.min.css"
      asp-href-exclude="**/*-reboot*,**/*-grid*" />

<div>
    <div class="bg-faded p-1">
        <h3>@Model.Name</h3>
        <h4>@Model.Date.ToString("MM/dd/yyyy") @Model.Author</h4>
    </div>

    <div class="card-text p-1">
        @Model.Description
    </div>
</div>