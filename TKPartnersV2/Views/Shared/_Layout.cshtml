<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/main.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <title>TKPartners</title>
</head>
<body>
    <div class="site-root" style="padding-bottom: 40px;">
        <div style="text-align:center; position: absolute; top:6px; left: 5px; height:25px; width: 50px;">
            <a asp-action="Index" asp-controller="Admin">
                <span class="slider-info-text" style="color: #0C3C60">@(User.Identity.IsAuthenticated ? "Admin" : "Вхід")</span>
            </a>
        </div>

        <header>
            <div class="site-header">
                @await Component.InvokeAsync("NavigationMenu")

                <div style="height:1px; width: 100%; min-width: 980px; background-color: #5c697b"></div>
                <div class="logo">
                    <div class="logo1">
                        <img data-type="image" src="/images/tklogo.png" style="width: 47px; height: 60px; object-fit: contain;">
                    </div>
                    <div class="logo2">
                        <a asp-action="Index" asp-controller="Home" style="cursor: pointer; width: 216px; height: 76px;">
                            <img data-type="image" src="/images/tktext.png" style="width: 216px; height: 76px; object-fit: contain;">
                        </a>
                    </div>
                    <div class="logo3">
                        <span style="color: #5C697B;font-family:georgia,palatino,book antiqua,palatino linotype,serif;font-size:14px;">
                            а д в о к а т с ь к е &nbsp; о б ' є д н а н н я
                        </span>
                    </div>
                </div>
            </div>
        </header>
        <div class="mainPage" style="position: relative;">
            @RenderBody()
        </div>
        <footer>
            <div class="site-footer">
                <div class="footer-text" style="float: left;">
                    <p class="p-footer">
                        <span style="color:#AFCBE0;">© 2010-2017&nbsp;Адвокатське об'єднання T.K.Partners</span>
                    </p>
                </div>
                <div style="width: 24px; height: 24px; float:right; margin-right: 20px; margin-top: 10px;">
                    <ul aria-label="Social bar" style="width: 100%;height: 100%; white-space: nowrap;">
                        <li style="width: 24px; height: 24px; margin-bottom: 0px; margin-right: 30px; display: inline-block;">
                            <a href="http://www.facebook.com/pages/Advokatske-obednanna-tkpartners/163181253718859?v=wall" target="_blank" data-content="http://www.facebook.com/pages/Advokatske-obednanna-tkpartners/163181253718859?v=wall" data-type="external">
                                <div style=" width: 24px; height: 24px;">
                                    <img alt="Facebook Clean " data-type="image" style="width: 24px; height: 24px; object-fit: cover;" src="https://static.wixstatic.com/media/4f857b2e8a316c4e1ed16717a3d4ec8c.png/v1/fill/w_24,h_24,al_c,usm_0.66_1.00_0.01/4f857b2e8a316c4e1ed16717a3d4ec8c.png">
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>