@model News

<div style="width:600px; position:relative; height: 240px; background-color: rgba(175, 203, 224, 0.42); padding-top: 20px; margin-bottom: 30px;">
    <div style="width:520px; margin-left:40px; height: 200px">
        <div>
            <p class="font_6"><a asp-controller="Home" asp-action="News" asp-route-newsID="@Model.NewsID">@Model.Name</a></p>
            <p class="font_9">@Model.Date.ToString("MM/dd/yyyy") @Model.Author</p>
        </div>

        <p class="font_8">
            @if(Model.Description.Length > 200)
            {
                @Model.Description.Substring(0, Math.Min(Model.Description.Length, 200));@:...
            }else
            {
                @Model.Description;
            }
        </p>

        <div class="slider-info-button" style=" height: 30px; width: 140px; position: absolute; left:40px; bottom: 20px;">
            <a asp-action="News" asp-controller="Home" asp-route-newsID="@Model.NewsID" class="slider-info-link" style="padding: 0.1em 1.8em">
                <span class="slider-info-text">Читати далі</span>
            </a>
        </div>
    </div>
</div>
