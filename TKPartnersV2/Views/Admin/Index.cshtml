@model IEnumerable<News>
@{
    ViewBag.Title = "Всі Новини";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Назва</th>
        <th class="text-right">Дата</th>
        <th class="text-right">Автор</th>
        <th class="text-center">Дії</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.NewsID</td>
            <td>@item.Name</td>
            <td class="text-right">@item.Date</td>
            <td class="text-right">@item.Author</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-newsId="@item.NewsID">
                        Змінити
                    </a>
                    <input type="hidden" name="NewsID" value="@item.NewsID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Видалити
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Добавити Новину</a>
</div>