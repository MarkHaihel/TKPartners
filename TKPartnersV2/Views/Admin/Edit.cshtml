@model News

@{
    ViewBag.Title = "Редагувати Новину";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="NewsID" />
    <div class="form-group">
        <label asp-for="Name">Назва</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Опис</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control" style="height: 100px"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Author">Автор</label>
        <div><span asp-validation-for="Author" class="text-danger"></span></div>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date">Дата</label>
        <div><span asp-validation-for="Date" class="text-danger"></span></div>
        <input type="date" asp-for="Date" class="form-control " />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Зберегти</button>
        <a asp-action="Index" class="btn btn-secondary">Відмінити</a>
    </div>
</form>